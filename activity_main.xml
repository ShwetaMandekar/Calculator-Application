<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"

    tools:context=".MainActivity">


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtResult"
                android:layout_width="258dp"
                android:layout_height="50dp"
                android:layout_span="8"
                android:layout_gravity="right"
                 />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edtInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="right"
                android:layout_span="4"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >

            <Button
                android:id="@+id/btnCE"
                android:text="CE"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>

            <Button
                android:id="@+id/btnC"
                android:text="C"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnDelete"
                android:layout_span="2"
                android:text="Delete"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>

                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            >

            <Button
                android:id="@+id/btnNumber7"
                android:text="7"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumber8"
                android:text="8"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumber9"
                android:text="9"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumberAdd"
                android:text="+"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            >

            <Button
                android:id="@+id/btnNumber4"
                android:text="4"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>

            />

            <Button
                android:id="@+id/btnNumber5"
                android:text="5"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumber6"
                android:text="6"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumberSub"
                android:text="-"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btnNumber1"
                android:text="1"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumber2"
                android:text="2"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumber3"
                android:text="3"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumberMul"
                android:text="*"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            >

            <Button
                android:id="@+id/btnNumber0"
                android:text="0"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnResult"
                android:text="="
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

            <Button
                android:id="@+id/btnNumberDiv"
                android:text="/"
                android:textSize="20dp"
                android:background="@drawable/rounded_corner"/>
            />

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- By Shweta "
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="#400410"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:text="Calculator"
        android:textAlignment="center"
        android:textColor="#400410"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>

